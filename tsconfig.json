{
    "compilerOptions": {
        "target": "es2022",
        "module": "es2022",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "./dist",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "types": [
            "@acode-app/types"
        ],
        "paths": {
            "acode/*": [
                "./node_modules/@acode-app/types/src/*"
            ]
        }
    },
    "exclude": [
        "./dist/**/*"
    ],
    "include": [
        "./src"
    ]
}